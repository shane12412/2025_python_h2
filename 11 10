# 數字運算範例
a = 10
b = 3

print(f"加法：{a} + {b} = {a + b}")
print(f"減法：{a} - {b} = {a - b}")
print(f"乘法：{a} * {b} = {a * b}")
print(f"除法：{a} / {b} = {a / b}")
print(f"整數除法：{a} // {b} = {a // b}")
print(f"餘數：{a} % {b} = {a % b}")
print(f"次方：{a} ** {b} = {a ** b}")





age = 25
score = 87.5

age_str = str(age)
score_str = str(score)

print(f"整數 {age} 轉字串：'{age_str}' (型別：{type(age_str)})")
print(f"浮點數 {score} 轉字串：'{score_str}' (型別：{type(score_str)})")
